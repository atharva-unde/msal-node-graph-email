{
  "name": "microsoft-graph-email-service",
  "version": "1.0.0",
  "description": "Node.js service for sending emails via Microsoft Graph API with automatic token management",
  "main": "index.js",
  "contributors": [
    "Atharva Unde <atharva@confiancebizsol.in>"
  ],
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test-token": "node -e \"require('./test-email').checkTokenStatus()\"",
    "test-email": "node -e \"require('./test-email').testEmailSending()\""
  },
  "keywords": [
    "microsoft-graph",
    "email",
    "oauth",
    "msal",
    "node.js",
    "express"
  ],
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^3.8.1",
    "axios": "^1.13.1",
    "better-auth": "^1.3.34",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0"
  }
}